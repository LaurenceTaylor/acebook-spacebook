<%= flash[:notice] %>
Here's your feed, <%= @user.name %><br>

<%= link_to('Your Wall', user_path(@user)) %>

<%= form_for :post, url: posts_path, html: {method: :post} do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>
  <%= form.hidden_field :user_id, value: @user.id %>
  <%= form.hidden_field :wall_id, value: @wall.id %>
  <%= form.submit "Submit" %>
<% end %>

<%= button_to "Sign Out", destroy_session_path, method: 'delete' %>
